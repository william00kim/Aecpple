<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="200dp"
    android:layout_marginTop="30dp"
    android:id="@+id/asd"
    app:circularflow_radiusInDP="10dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="200dp"
        android:layout_marginLeft="10dp"
        android:layout_marginTop="5dp"
        android:layout_marginRight="10dp"
        android:layout_marginBottom="5dp"
        android:background="@drawable/radius"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.499">

        <LinearLayout
            android:layout_width="230dp"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <TextView
                android:id="@+id/tv_gymname"
                android:layout_width="200dp"
                android:layout_height="35dp"
                android:layout_gravity="center_vertical"
                android:layout_marginLeft="15dp"
                android:layout_marginTop="26dp"
                android:background="@drawable/buttno_all_round"
                android:ems="20"
                android:gravity="center_vertical"
                android:paddingLeft="10dp"
                android:text="운동시설 이름"
                android:textColor="#000000"
                android:textColorHint="#A5000000"
                android:textSize="15dp" />

            <TextView
                android:id="@+id/tv_gymcall"
                android:layout_width="match_parent"
                android:layout_height="35dp"
                android:layout_gravity="center_vertical"
                android:layout_marginLeft="15dp"
                android:layout_marginTop="20dp"
                android:background="@drawable/buttno_all_round"
                android:ems="20"
                android:gravity="center_vertical"
                android:paddingLeft="10dp"
                android:text="운동시설 전화번호"
                android:textColor="#000000"
                android:textColorHint="#A5000000"
                android:textSize="15dp" />

            <TextView
                android:id="@+id/tv_gymadress"
                android:layout_width="match_parent"
                android:layout_height="35dp"
                android:layout_gravity="center_vertical"
                android:layout_marginLeft="15dp"
                android:layout_marginTop="20dp"
                android:background="@drawable/buttno_all_round"
                android:ems="20"
                android:gravity="center_vertical"
                android:paddingLeft="10dp"
                android:text="운동시설 주소"
                android:textColor="#000000"
                android:textColorHint="#A5000000"
                android:textSize="15dp" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <TextView
                android:id="@+id/tv_actname"
                android:layout_width="100dp"
                android:layout_height="20dp"
                android:layout_gravity="center_vertical"
                android:layout_marginTop="40dp"
                android:background="@drawable/buttno_all_round"
                android:ems="20"
                android:gravity="center|center_vertical"
                android:text="종목명"
                android:textColor="#000000"
                android:textColorHint="#A5000000"
                android:textSize="13dp" />

            <ImageView
                android:id="@+id/iv_icon"
                android:layout_width="match_parent"
                android:layout_height="100dp"
                android:layout_marginTop="15dp"
                app:srcCompat="@drawable/home" />
        </LinearLayout>
    </LinearLayout>
</androidx.constraintlayout.widget.ConstraintLayout>