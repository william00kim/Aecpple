<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#46B1E1"
    tools:context=".FoundAccountActivity">

    <!--계정 찾기 전체 레이아웃-->

    <LinearLayout
        android:id="@+id/LL_found"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:gravity="center"
        android:orientation="vertical"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintEnd_toStartOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <!--계정 찾기 텍스트-->


        <!--아이디 찾기 버튼 (길이355)-->
        <TextView
            android:id="@+id/textView2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="20dp"
            android:text="FIT FOR YOU 계정 찾기"
            android:textColor="#ffffff"
            android:textSize="20sp" />

        <Button
            android:id="@+id/btn_findid"
            android:layout_width="355dp"
            android:layout_height="50dp"
            android:background="@drawable/buttno_all_round"
            android:text="아이디 찾기"
            android:textColor="#46B1E1"
            android:textSize="20dp" />

        <!--비밀번호 찾기 버튼 (길이355)-->
        <Button
            android:id="@+id/btn_findpw"
            android:layout_width="355dp"
            android:layout_height="50dp"
            android:layout_marginTop="30dp"
            android:background="@drawable/buttno_all_round"
            android:text="비밀번호 찾기"
            android:textColor="#46B1E1"
            android:textSize="20dp" />

        <!--뒤로가기(하단) 버튼3(레이아웃)-->

        <!--전체 레이아웃 종료-->
    </LinearLayout>
</androidx.constraintlayout.widget.ConstraintLayout>