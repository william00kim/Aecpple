<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ChangeAccountActivity">

    <!--회원 정보 변경 전체 레이아웃-->
    <LinearLayout
        android:id="@+id/LL_change"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        tools:layout_editor_absoluteX="25dp"
        tools:layout_editor_absoluteY="0dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintEnd_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <!--회원정보변경 텍스트-->
        <TextView
            android:layout_width="match_parent"
            android:layout_height="85dp"
            android:background="#46B1E1"
            android:gravity="center_vertical"
            android:text="회원 정보 변경"
            android:paddingLeft="30dp"
            android:textColor="#F5F5F5"
            android:textSize="24dp"
            tools:ignore="MissingConstraints" />


        <!--아이디 텍스트-->
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="27dp"
            android:layout_marginRight="30dp"
            android:layout_marginTop="20dp"
            android:paddingLeft="15dp"
            android:textColor="#000000"
            android:gravity="center_vertical"
            android:text="아이디"
            android:textSize="17dp" />
        <!--회원별 아이디 변경창 (길이355)-->
        <EditText
            android:id="@+id/et_changeid"
            android:layout_width="355dp"
            android:layout_height="50dp"
            android:layout_marginTop="5dp"
            android:layout_marginLeft="27dp"
            android:background="@drawable/buttno4"
            android:hint="ABCid"
            android:inputType="text"
            android:paddingLeft="15dp"
            android:textColor="#F5F5F5"
            android:textColorHint="#D0F5F5F5"
            android:textSize="20dp" />


        <!--이름 텍스트-->
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="27dp"
            android:layout_marginRight="30dp"
            android:layout_marginTop="20dp"
            android:paddingLeft="15dp"
            android:textColor="#000000"
            android:gravity="center_vertical"
            android:text="이름"
            android:textSize="17dp" />
        <!--회원별 이름 보기창 (총길이 355)  -->
        <EditText
            android:id="@+id/et_changename"
            android:layout_width="355dp"
            android:layout_height="50dp"
            android:layout_marginLeft="27dp"
            android:layout_marginTop="5dp"
            android:layout_marginRight="30dp"
            android:background="@drawable/buttno4"
            android:paddingLeft="15dp"
            android:textColor="#F5F5F5"
            android:gravity="center_vertical"
            android:text="ABCname"
            android:textSize="20dp" />


        <!--생년월일 텍스트-->
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="27dp"
            android:layout_marginRight="30dp"
            android:layout_marginTop="20dp"
            android:paddingLeft="15dp"
            android:textColor="#000000"
            android:gravity="center_vertical"
            android:text="생년월일"
            android:textSize="17dp" />
        <!--회붱별 생년월일 보기창(총길이 315)  -->
        <EditText
            android:id="@+id/et_changebirth"
            android:layout_width="355dp"
            android:layout_height="50dp"
            android:layout_marginLeft="27dp"
            android:layout_marginTop="5dp"
            android:layout_marginRight="30dp"
            android:background="@drawable/buttno4"
            android:paddingLeft="15dp"
            android:textColor="#F5F5F5"
            android:gravity="center_vertical"
            android:text="ABCbirth"
            android:textSize="20dp" />

        <!--장애 여부 선택 창-->
        <RadioGroup
            android:layout_width="match_parent"
            android:layout_height="170dp"
            android:layout_marginLeft="50dp"
            android:layout_marginTop="50dp">
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="장애 비장애 여부"
                android:textColor="#000000"
                android:textSize="17dp"/>
            <RadioButton
                android:id="@+id/btn_disable2"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="15dp"
                android:text="     장애"
                android:textSize="17dp"/>
            <RadioButton
                android:id="@+id/btn_notdisable2"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="     비장애"
                android:textSize="17dp"/>
        </RadioGroup>

        <!--변경하기(하단) 버튼(레이아웃)-->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:gravity="bottom">
            <Button
                android:id="@+id/btn_change"
                android:layout_width="match_parent"
                android:layout_height="85dp"
                android:background="#46B1E1"
                android:gravity="center_vertical"
                android:text="변경하기"
                android:paddingLeft="50dp"
                android:textColor="#E2F5F5F5"
                android:textSize="20dp"
                tools:ignore="MissingConstraints" />
        </LinearLayout>

        <!--전체 레이아웃 종료-->
    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>